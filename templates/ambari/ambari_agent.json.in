{
    "id": "/ambariagent",
    "instances": 1,
    "cpus": 1,
    "mem": 4096,
    "shell": "false",
    "cmd": "/scripts/bootstrap.sh",
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "dockerhub.razerdata.com/razer/ambari:2.0.0",
	    "privileged": true,
            "network": "BRIDGE",
	    "parameters": [
		 {"key": "env", "value": "AMBARI_SERVER=$AMBARI_SERVER"}
	    ],
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 0,
                    "protocol": "tcp"
                }
            ]
        }
    }
}
